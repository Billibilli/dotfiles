# vi:syntax=sh

alias l='ls -CF -lh'
alias ll='ls -l'
alias la='ls -A'
alias copy='xclip -sel clip'
alias ct='column -t'

alias refresh='source ~/.bash_profile'
alias -- -='cd -'

# alias vi='nvim'
# alias vim='nvim'

# Terminal
alias c='clear'
alias e='exit'

# Package management
alias backport='sudo apt-get -t wheezy-backports install'
alias installed='dpkg --get-selections'

# Networking
alias a2restart="sudo service apache2 restart"
alias sss='python -m SimpleHTTPServer 8888 &'
alias sps='php -S localhost:3000'
alias guard='bundle exec guard'

# Various
alias colorpicker="gcolor2"
alias calc="qalc"
alias unrar="unrar x"
alias gtypist="gtypist -S"
