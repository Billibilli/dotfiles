set message_cachedir ="~/.mutt/cache/bodies"
set certificate_file ="~/.mutt/certificates"

# SMTP SETTINGS
set smtp_url=$my_smtp_url
set smtp_pass=$my_pass # use the same passowrd as for IMAP

